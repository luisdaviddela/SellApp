<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Apartar producto"
             x:Class="BotanitApp.VentasView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cantidad" 
                   FontSize="Large" 
                   HorizontalOptions="Center"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Text="-"  Grid.Row="0" Grid.Column="0" Clicked="btn1_Clicked"/>
                <Button Text="+"  Grid.Row="0" Grid.Column="1" Clicked="btn1_Clicked_1"/>
            </Grid>
            
            <Label x:Name="cantidad" 
                   HorizontalOptions="Center" 
                   FontSize="Medium"/>
            <Label Text="Seleccionar edificio"
                   HorizontalOptions="Center" 
                   FontSize="Medium"/>
            <Picker x:Name="pickedificios"/>

            <Button Text="Comprar/Apartar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>